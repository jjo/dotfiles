[user]
	name = JuanJo Ciarlante
	email = juanjosec@gmail.com
	signingkey = 09D5FB6E8050D21C
[merge]
	tool = vimdiff
	conflictstyle = diff3

[core]
	editor = vim
	excludesfile = /home/jjo/.gitignore_global
	# https://github.com/dandavison/delta
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true  # use n and N to move between diff sections
	side-by-side = true
	#light = true
	#show-syntax-themes = true
	wrap-max-lines = 100

[alias]
	last = log -1 HEAD
	co = checkout
	st = status
	br = branch
	ci = commit -s
	di = diff
	unstage = reset HEAD --
	ls = ls-files -v --stage --abbrev=8
	log-graph = log --pretty=oneline --graph --all --abbrev-commit --decorate
	log-grep = !sh -c 'git log -p -m --pickaxe-regex -S$1 $2' -
	log-one-line-custom = log --pretty=format:"%h%x09%an%x09%ad%x09%s"
	uncommit = reset --soft HEAD^
	prune-merged = git branch --merged | grep dm/ | grep -v "\\*" | xargs -rn1 git branch -d
	changelog = log --pretty=format:'- %s %H (%an)'
	rev-tag = describe --tags
	re-sign = "!re_sign() { git rebase --exec 'git commit --amend --no-edit -n -s -S' -i ${1:?missing commit/branch to start with}; }; re_sign"
	# Goodies from https://blog.gitbutler.com/fosdem-git-talk/
	blameplus = blame -w -C -C -C


[color]
	ui = auto

[diff]
	guitool = meld
	tool = vimdiff
	colorMoved = default
[push]
	default = simple

[url "git+ssh://jjo@git.launchpad.net/"]
	insteadof = lp:

# Needs:
#   gh auth setup-git
[url "https://github.com/"]
	insteadOf = git@github.com:
#[url "git@github.com:"]
#	insteadOf = https://github.com/

[pager]
	branch = false
[credential "https://github.com"]
	helper = !gh auth git-credential
[gpg]
	program = gpg
[credential "https://gist.github.com"]
	helper = !gh auth git-credential
[includeIf "gitdir:/Users"]
	path = ~/.gitconfig-macos
# Goodies from https://blog.gitbutler.com/fosdem-git-talk/
[rerere]
	enabled = true
