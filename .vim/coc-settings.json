{
  "suggest.autoTrigger": "none",
  "suggest.noselect": true,
  "languageserver": {
    "jsonnet": {
      "command": "jsonnet-language-server",
      "args": ["-t"],
      "rootPatterns": [".git/"],
      "filetypes": ["jsonnet"]
    },
    "python": {
      "command": "pylsp",
      "rootPatterns": [".git/"],
      "filetypes": ["py", "python"]
    },
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {},
      "settings": {}
    }
  }
}
