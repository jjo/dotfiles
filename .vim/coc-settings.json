{
  "suggest.autoTrigger": "none",
  "suggest.noselect": true,
  "languageserver": {
    "jsonnet": {
      "command": "jsonnet-language-server",
      "args": ["-t"],
      "rootPatterns": [".git/"],
      "filetypes": ["jsonnet"]
    },
    "python": {
      "command": "pylsp",
      "rootPatterns": [".git/"],
      "filetypes": ["py", "python"],
      "pylsp.plugins.pyflakes.enabled": false
    }
  }
}
